<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/usedesk_common_container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:ignore="KeyboardInaccessibleWidget"
    tools:theme="@style/Usedesk.KnowledgeBase.Screen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/usedesk_view_toolbar" />

    <include
        android:id="@+id/toolbar_search"
        layout="@layout/usedesk_view_toolbar_search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/page_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/usedesk_kb_nav_graph" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_support"
            style="?attr/usedesk_knowledgebase_screen_support_button" />
    </FrameLayout>
</LinearLayout>