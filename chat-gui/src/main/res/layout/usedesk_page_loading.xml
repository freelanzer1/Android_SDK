<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/usedesk_common_container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:theme="@style/Usedesk.Chat.Screen.Loading.Page">

    <LinearLayout
        style="?attr/usedesk_common_container_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_loading_image"
            style="?attr/usedesk_chat_screen_loading_image" />

        <TextView
            android:id="@+id/tv_loading_title"
            style="?attr/usedesk_chat_screen_loading_title" />

        <TextView
            android:id="@+id/tv_loading_text"
            style="?attr/usedesk_chat_screen_loading_text"
            tools:text="@string/usedesk_no_internet_text" />
    </LinearLayout>
</FrameLayout>