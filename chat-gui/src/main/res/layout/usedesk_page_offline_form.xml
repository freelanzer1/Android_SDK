<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/usedesk_common_container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:theme="@style/Usedesk.Chat.Screen.Offline.Form.Page">

    <LinearLayout
        style="?attr/usedesk_common_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offline_form_text"
            style="?attr/usedesk_chat_screen_offline_form_description_text" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fields"
            style="?attr/usedesk_common_container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:itemCount="3"
            tools:listitem="@layout/usedesk_item_field_text" />

        <androidx.cardview.widget.CardView
            style="?attr/usedesk_common_container_3"
            android:layout_width="match_parent">

            <FrameLayout
                android:id="@+id/l_offline_form_send"
                style="?attr/usedesk_common_container_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/pb_offline_form_loading"
                    style="?attr/usedesk_common_progressbar"
                    android:theme="?attr/usedesk_common_progressbar" />

                <TextView
                    android:id="@+id/tv_offline_form_send"
                    style="?attr/usedesk_chat_screen_offline_form_send_text" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>