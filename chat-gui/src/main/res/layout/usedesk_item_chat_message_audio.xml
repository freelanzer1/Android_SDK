<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/usedesk_common_container_3"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    tools:theme="@style/Usedesk.Chat.Message.Audio">

    <FrameLayout
        android:id="@+id/l_audio"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/stub"
        layout="@layout/usedesk_view_player_audio_controls" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/usedesk_ic_play_dark" />

    <FrameLayout
        android:id="@+id/time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_time"
            style="?attr/usedesk_chat_message_time_text"
            tools:text="12:06" />
    </FrameLayout>
</FrameLayout>