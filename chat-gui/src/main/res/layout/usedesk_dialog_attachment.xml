<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/usedesk_chat_attachment_dialog_background"
    android:baselineAligned="true"
    android:orientation="horizontal"
    tools:theme="@style/Usedesk.Chat.Attachment.Dialog">

    <LinearLayout
        android:id="@+id/l_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="12dp"
            android:duplicateParentState="true"
            app:srcCompat="?attr/usedesk_chat_attachment_dialog_gallery_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:duplicateParentState="true"
            style="?attr/usedesk_chat_attachment_dialog_gallery_text_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="12dp"
            android:duplicateParentState="true"
            app:srcCompat="?attr/usedesk_chat_attachment_dialog_camera_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:duplicateParentState="true"
            style="?attr/usedesk_chat_attachment_dialog_camera_text_style" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_storage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_margin="12dp"
            android:duplicateParentState="true"
            app:srcCompat="?attr/usedesk_chat_attachment_dialog_storage_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:duplicateParentState="true"
            style="?attr/usedesk_chat_attachment_dialog_storage_text_style" />
    </LinearLayout>
</LinearLayout>