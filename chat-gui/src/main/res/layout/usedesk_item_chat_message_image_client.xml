<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:theme="@style/Usedesk.Chat.Message.Image.Client">

    <TextView
        android:id="@+id/tv_date"
        style="?attr/usedesk_chat_message_date_text"
        tools:text="Вчера" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sent_failed"
            style="?attr/usedesk_chat_message_client_sent_failed_image" />

        <include
            android:id="@+id/content"
            layout="@layout/usedesk_item_chat_message_image" />
    </LinearLayout>

    <View
        android:id="@+id/v_empty"
        android:layout_width="match_parent"
        android:layout_height="4dp" />
</LinearLayout>