<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        android:theme="?attr/usedesk_chat_style_message_agent_text"
        tools:theme="@style/UsedeskChatMessage.AgentText">

        <include
            android:id="@+id/avatar"
            layout="@layout/usedesk_item_chat_avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sf_ui_display_regular"
                android:singleLine="true"
                android:textColor="@color/usedesk_gray_dark"
                tools:text="Алена Ошева" />

            <FrameLayout
                android:id="@+id/l_agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_agent">

                <include
                    android:id="@+id/content"
                    layout="@layout/usedesk_item_chat_message_text" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</layout>