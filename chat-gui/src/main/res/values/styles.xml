<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Usedesk.Chat.Screen.Chat" parent="">
        <item name="usedesk_chat_screen_chat_title">@string/usedesk_screen_chat_title</item>

        <item name="usedesk_chat_offline_form_action_button_background_enabled">#333333</item>
        <item name="usedesk_chat_offline_form_action_button_background_disabled">#ADBEC9</item>
    </style>

    <style name="Usedesk.Chat.Screen.File" parent=""></style>

    <style name="Usedesk.Chat.Screen.Html" parent=""></style>

    <style name="Usedesk.Chat.Attachment.Dialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog" />

    <style name="Usedesk.Chat.Screen.Chat.Attachment.Dialog.Root" parent="">
        <item name="android:layout_margin">8dp</item>
        <item name="android:baselineAligned">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Usedesk.Chat.Screen.Chat.Attachment.Dialog.Image" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Usedesk.Chat.Screen.Chat.Attachment.Dialog.Image.ImageView" parent="">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="srcCompat">@drawable/ic_gallery</item>
    </style>

    <style name="Usedesk.Chat.Offline.Form.Success.Dialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">

    </style>

    <style name="Usedesk.Chat.Attachment.File" parent=""></style>

    <style name="Usedesk.Chat.Message" parent="">
        <item name="usedesk_chat_image_radius_bottom_left">6dp</item>
        <item name="usedesk_chat_image_radius_bottom_right">6dp</item>
    </style>

    <style name="Usedesk.Chat.Message.Button" parent=""></style>

    <style name="Usedesk.Chat.Message.Agent">
        <item name="usedesk_chat_image_radius_bottom_left">0dp</item>
    </style>

    <style name="Usedesk.Chat.Message.Client">
        <item name="usedesk_chat_image_radius_bottom_right">0dp</item>
    </style>

    <style name="Usedesk.Chat.Message.Agent.Text"></style>

    <style name="Usedesk.Chat.Message.Agent.File"></style>

    <style name="Usedesk.Chat.Message.Agent.Image"></style>

    <style name="Usedesk.Chat.Message.Client.Text"></style>

    <style name="Usedesk.Chat.Message.Client.File"></style>

    <style name="Usedesk.Chat.Message.Client.Image"></style>

    <style name="Usedesk.Chat.Offline.Form.ProgressBar" parent="">
        <item name="colorAccent">#EB5757</item>
    </style>

