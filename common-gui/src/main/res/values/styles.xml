<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Usedesk.Common" parent="">
        <item name="usedesk_common_toolbar_root_background">@color/usedesk_white_2</item>
        <item name="usedesk_common_toolbar_divider_background">@color/usedesk_gray_2</item>
        <item name="usedesk_common_toolbar_back_image">@style/Usedesk.Common.Toolbar.Back.Image</item>
        <item name="usedesk_common_toolbar_action_image">@style/Usedesk.Common.Toolbar.Action.Image</item>
        <item name="usedesk_common_toolbar_title_text">@style/Usedesk.Common.Toolbar.Title.Text</item>
    </style>

    <style name="Usedesk.Common.BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog" />

    <style name="Usedesk.Common.No.Permission.Snackbar" parent="">
        <item name="usedesk_text_1">@string/usedesk_need_permission</item>
        <item name="usedesk_text_2">@string/usedesk_settings</item>
        <item name="usedesk_text_color_1">@color/usedesk_white_2</item>
        <item name="usedesk_text_color_2">@color/usedesk_red</item>
        <item name="usedesk_background_color_1">@color/usedesk_black_2</item>
    </style>

    <style name="Usedesk.Common.Toolbar.Back.Image" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="srcCompat">@drawable/usedesk_ic_back</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Usedesk.Common.Toolbar.Action.Image" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="Usedesk.Common.Toolbar.Title.Text" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/usedesk_black_2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/sf_ui_display_semibold</item>
    </style>

    <style name="Usedesk.Common.Field.CheckBox" parent="">
        <item name="usedesk_common_field_checkbox_text">@style/Usedesk.Common.Field.CheckBox.Text</item>
        <item name="usedesk_common_field_checkbox_image">@style/Usedesk.Common.Field.CheckBox.Image</item>
    </style>

    <style name="Usedesk.Common.Field.CheckBox.Text" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/usedesk_black_2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Usedesk.Common.Field.CheckBox.Image" parent="">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:padding">10dp</item>
        <item name="usedesk_drawable_1">@drawable/ic_unchecked</item>
        <item name="usedesk_drawable_2">@drawable/ic_checked</item>
    </style>

    <style name="Usedesk.Common.Field.List" parent="">
        <item name="usedesk_text_color_1">@color/usedesk_gray_2</item>
        <item name="usedesk_text_color_2">@color/usedesk_red</item>
    </style>

    <style name="Usedesk.Common.Field.Text" parent="">
        <item name="usedesk_common_field_text_input_layout">@style/Usedesk.Common.Field.Text.InputLayout</item>
        <item name="usedesk_common_field_text_edit_text">@style/Usedesk.Common.Field.Text.EditText</item>
        <item name="usedesk_text_1">""</item>
        <item name="usedesk_text_2">@string/usedesk_field_required_error</item>
        <item name="usedesk_text_color_1">@color/usedesk_gray_2</item>
        <item name="usedesk_text_color_2">@color/usedesk_red</item>
    </style>

    <style name="Usedesk.Common.Field.Text.InputLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/usedesk_red</item>
        <item name="android:textSize">50sp</item>
        <item name="android:text">""</item>
    </style>

    <style name="Usedesk.Common.Field.Text.EditText" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textColor">@color/usedesk_black_2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Usedesk.Common.Field.Text.EditText.SingleLine">
        <item name="android:singleLine">true</item>
    </style>
</resources>